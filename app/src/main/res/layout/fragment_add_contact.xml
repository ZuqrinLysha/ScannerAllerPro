<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray">

    <!-- Top Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="8dp">

        <TextView
            android:id="@+id/title_contact"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="New Contact"
            android:textSize="30sp"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/button_cancel"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_background"
            android:contentDescription="Cancel"
            android:src="@drawable/baseline_cancel_24" />

        <ImageButton
            android:id="@+id/button_save"
            android:layout_width="53dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/button_background"
            android:contentDescription="Save"
            android:src="@drawable/baseline_save_24" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/contactForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Name Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:padding="8dp"
                    android:background="@color/softblue">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        android:src="@drawable/baseline_person_24" />

                    <EditText
                        android:id="@+id/edtContactName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/edit_text_background"
                        android:hint=" Input Name"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:padding="8dp"
                    android:background="@color/softblue">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:src="@drawable/baseline_phone_24" />

                    <EditText
                        android:id="@+id/edtPhone"
                        android:layout_width="332dp"
                        android:layout_height="51dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/edit_text_background"
                        android:hint=" +60 xxxxxxxxxx"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Relationship Section (Spinner) -->
                <TextView
                    android:id="@+id/txtChooseRelationship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Relationship"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/relationship_options"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/spinner_background"
                    android:padding="8dp"
                    android:popupBackground="@color/softblue" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</LinearLayout>
