<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AllergicHistoryFragment"
    android:background="@color/light_gray">

    <!-- Header Section -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/softblue"
        app:title="Allergic History"
        app:titleTextColor="@android:color/white" />

    <!-- Instructional Text -->
    <TextView
        android:id="@+id/txtInstructions"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Please tick if you have any of the following allergic reactions:"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- ScrollView to contain the checkboxes -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- Checkboxes for Allergic Reactions -->
            <CheckBox
                android:id="@+id/chkPeanuts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peanuts"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/chkDairy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dairy"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/chkGluten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gluten"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/chkSeafood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seafood"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/chkEggs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eggs"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/chkSoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soybeans"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/chkSesame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sesame"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <CheckBox
                android:id="@+id/chkWheat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wheat"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveAllergies"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="16sp"
        android:backgroundTint="@color/blue1"
        android:textColor="@android:color/white"
        android:background="@drawable/custom"/>

</LinearLayout>
