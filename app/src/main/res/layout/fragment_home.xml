<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top|center_horizontal"
        android:padding="16dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="153dp"
                android:layout_height="68dp"
                android:contentDescription="App Logo"
                android:src="@drawable/lg_allerpro" />


        <!-- Highlights Section -->
        <TextView
            android:id="@+id/txtHighlightsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highlights"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="#000000"/>

        <!-- CardView for First Highlight Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/imgHighlights1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/allergic1" />
        </androidx.cardview.widget.CardView>

        <!-- CardView for Second Highlight Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/imgHighlights2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitCenter"
                android:src="@drawable/allergic2" /> <!-- Replace with your second image -->
        </androidx.cardview.widget.CardView>

        <!-- CardView for Third Highlight Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/imgHighlights3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/allergic3" /> <!-- Replace with your third image -->
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
